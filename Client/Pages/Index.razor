@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>


<div>
    <button @onclick="ShowCurrentDate">Show Date Time</button>
    <span style="margin-left: 10px;">@currentDate</span>

        @code {
            // Variable to store the current date
            private string currentDate = string.Empty;

            // Method to update the currentDate variable
            private void ShowCurrentDate()
            {
                currentDate = DateTime.Now.ToString("ddMMMMyyyy - HH:mm:ss");
            }
        }
</div>



<RadzenButton Text="Radzen Button" Click="@OnButtonClick" Style="margin:20px;"/>

    @code {
        void OnButtonClick()
        {
            Console.WriteLine("Radzen Button Clicked!");
        }
    }